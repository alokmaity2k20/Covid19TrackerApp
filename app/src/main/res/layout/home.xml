<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/homenested_scrolllview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/background"
                android:layout_margin="5dp">
                    <TextView
                        android:id="@+id/home_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COVID-19"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="35sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/home_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stay Home, Stay Safe"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/home_title"
                        android:gravity="center_horizontal"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <include
                    android:id="@+id/tab_india"
                    layout="@layout/tab_switch"/>
                <include
                    android:id="@+id/tab_world"
                    layout="@layout/tab_switch"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardElevation="5dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/newspaper"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/news"
                        android:textColor="@color/colorBlue"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:id="@+id/go"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/video1"
                        layout="@layout/video_layout"/>
                    <include
                        android:id="@+id/video2"
                        layout="@layout/video_layout"/>
                    <include
                        android:id="@+id/video3"
                        layout="@layout/video_layout"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="145dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/symptom1"
                        layout="@layout/info_layout"/>

                    <include
                        android:id="@+id/symptom2"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/symptom3"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/symptom4"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/symptom5"
                        layout="@layout/info_layout"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preventions"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="145dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/prev1"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/prev2"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/prev3"
                        layout="@layout/info_layout"/>
                    <include
                        android:id="@+id/prev4"
                        layout="@layout/info_layout"/>
                </LinearLayout>
            </HorizontalScrollView>
           
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/call_helpline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:text="@string/call"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/colorBlue"
        app:icon="@drawable/ic_call"
        app:iconPadding="1dp"
        app:iconTint="@color/colorWhite"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        app:menu_icon="@drawable/ic_add"
        app:menu_showShadow="true"
        app:menu_openDirection="up"
        app:menu_fab_size="normal"
        app:menu_backgroundColor="@android:color/transparent">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_showShadow="true"
            app:fab_label="Share"
            android:src="@android:drawable/ic_menu_share"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_showShadow="true"
            app:fab_label="Info"
            android:src="@drawable/ic_info"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_showShadow="true"
            app:fab_label="Feedback/Bug Report"
            android:src="@drawable/ic_feedback"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
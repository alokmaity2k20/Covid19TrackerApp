<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StateDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"/>
    </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrolllview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include
                    android:id="@+id/state_name"
                    layout="@layout/status_layout"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/state_today_cases"
                        layout="@layout/status_layout"/>
                    <include
                        android:id="@+id/state_today_recovered"
                        layout="@layout/status_layout"/>
                    <include
                        android:id="@+id/state_today_deaths"
                        layout="@layout/status_layout"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/state_total_cases"
                        layout="@layout/status_layout"/>
                    <include
                        android:id="@+id/state_total_recovered"
                        layout="@layout/status_layout"/>
                    <include
                        android:id="@+id/state_total_deaths"
                        layout="@layout/status_layout"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include
                        android:id="@+id/state_today_active"
                        layout="@layout/status_layout"/>
                    <include
                        android:id="@+id/state_active"
                        layout="@layout/status_layout"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</RelativeLayout>
